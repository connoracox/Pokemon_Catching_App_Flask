{% extends "base.jinja" %}

{% block content %}
    <h2>Sign In Here</h2>
    <form action="" method="post">
        {{ sign_in_form.hidden_tag() }}
        <p>
        {{ sign_in_form.username.label }}<br>
        {{ sign_in_form.username(size=32) }}
        </p>
        <p>
        {{ sign_in_form.password.label }}<br>
        {{ sign_in_form.password(size=32) }}
        </p>
        <p>{{ sign_in_form.remember_me() }}  {{ sign_in_form.remember_me.label }}</p>
        <p>
        {{ sign_in_form.submit(class='btn btn-primary') }}
        </p>
    </form>
{% endblock %}

